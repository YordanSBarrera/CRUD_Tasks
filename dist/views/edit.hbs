<div class="container">
  <div class="row">
    <div class="col-md-5 offset-md-3">
      <div class="card card-body bg-dark rounded-0 p-4 text-white">
        <h3>EDITA LA TAREA</h3>
        <form action="/edit/{{task._id}}" method="POST">
          <input
            type="text"
            name="title"
            placeholder="Title"
            value="{{task.title}}"
            class="form-control rounded-0 bg-dark text-white mb-3"
          />
          <textarea
            name="description"
            placeholder="Add a Description"
            rows="3"
            class="form-control rounded-0 bg-dark text-white mb-3"
          >{{task.description}}</textarea>
          <button class="btn btn-primary">Actualizar</button>
        </form>
      </div>
    </div>
  </div>
</div>